# Selecting Maximum No among any table and Min

Select max(amount) from tableName;
Select min(amount) from tableName;

SELECT MAX(DISTINCT aggregate_expression)    
FROM table_name(s)    
[WHERE conditions]; 

// ---------------------------------------------------------
 # Using Round for rounding and using select two times

SELECT ROUND(LONG_W,4)
FROM STATION
WHERE LAT_N = (SELECT MAX(LAT_N) FROM STATION WHERE LAT_N < 137.2345);

//----------------------------------------------------------
# For mod we use abs(a-b) and use as for assigning value

SELECT ROUND(ABS(A - C) + ABS(B - D), 4)
FROM (
        SELECT MAX(LAT_N) AS A, MIN(LAT_N) AS B , MAX(LONG_W) AS C , MIN(LONG_W) AS D
        FROM STATION
    ) ;

